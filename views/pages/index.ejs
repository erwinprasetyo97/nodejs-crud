<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>HERO LIST</title>
    <%- include('../partials/head') %> 
    <link rel="stylesheet" href="../../node_modules/sweetalert2/dist/sweetalert2.min.css">
</head>

<body class="container">

<header>
    <%- include('../partials/header') %> 
</header>
    <h1>
        <%= heroes.title %>
    </h1>   
    <table class="table table-striped">
        <thead class="thead-dark">
            <tr>
                <br/>
                <th>id</th>
                <th>Name</th>
                <th>Role</th>
                <th>Skin</th>
                <th>Action</th>
            </tr>
        </thead>
        <% for (let i = 0; i < heroes.data.length; i++) { %>
            <tr>
                <td><%= i + 1 %></td>
                <td><%= heroes.data[i].name %></td>
                <td><%= heroes.data[i].role %></td>
                <td><%= heroes.data[i].skin %></td>
                <form action="/hero/remove" method="post">
                    <td>
                        <a href="/hero/<%= heroes.data[i].id %>" class="btn btn-success" type="submit"><i data-feather="edit"></i>edit</a>
                        <input type="text" hidden name="id" value="<%= heroes.data[i].id %>" />
                        <button class="btn btn-danger"  onclick="return confirm('Yakin mau hapus ? ')" type="submit"><i data-feather="trash-2"></i>delete</button>
                        
                    </td>
                </form>
            </tr>  
            <% } %>
    </table>

    <h3>TAMBAHKAN HERO</h3>
    
    <form class="needs-validation" action="/hero/add" method="post" onsubmit="alert('apakah mau menambah hero ?')">
        <div class="form-label">
          <label for="name">Nama Hero</label>
          <input type="text" name="name" id="validationCustom01" required class="form-control" placeholder="Isi Nama Hero">
        </div>
        <div class="form-label">
          <label for="role">Role</label>
          <input type="text" name="role" id="validationCustom01" required class="form-control" placeholder="Isi Role nya">
        </div>
        <div class="form-label">
          <label for="skin">Skin</label>
          <input type="text" name="skin" id="validationCustom01" required class="form-control" placeholder="Isi Skin nya">
        </div>
        
        <button id="tambah" type="submit" class="btn btn-primary">Tambah Hero</button>
    </form>


<footer>
    <%- include('../partials/footer') %> 
</footer>

